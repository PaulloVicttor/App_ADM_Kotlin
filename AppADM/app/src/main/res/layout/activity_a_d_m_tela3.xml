<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMTela3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/logo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar Torneio"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo1"
        app:layout_constraintLeft_toLeftOf="@+id/ivLogo1"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tvTorneio"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvTorneio"
        app:layout_constraintRight_toRightOf="@+id/tvTorneio"
        android:layout_marginRight="200dp"
        android:layout_marginTop="30dp"
        android:id="@+id/tvNome"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/tvTorneio"
        app:layout_constraintLeft_toLeftOf="@+id/tvTorneio"
        android:layout_marginTop="30dp"
        android:id="@+id/etNome"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio:"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNome"
        app:layout_constraintLeft_toLeftOf="@+id/tvNome"
        android:layout_marginTop="40dp"
        android:id="@+id/tvInicio"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="datetime"
        app:layout_constraintTop_toBottomOf="@+id/etNome"
        app:layout_constraintLeft_toLeftOf="@+id/etNome"
        android:layout_marginTop="35dp"
        android:id="@+id/etInicio"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participantes:"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvInicio"
        app:layout_constraintLeft_toLeftOf="@+id/tvInicio"
        android:layout_marginTop="40dp"
        android:id="@+id/tvParticipantes"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etInicio"
        app:layout_constraintLeft_toLeftOf="@+id/etInicio"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/etParticipantes"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premio:"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvParticipantes"
        app:layout_constraintLeft_toLeftOf="@+id/tvParticipantes"
        android:layout_marginTop="40dp"
        android:id="@+id/tvPremio"
        />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/etParticipantes"
        app:layout_constraintLeft_toLeftOf="@+id/tvParticipantes"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="35dp"
        android:id="@+id/etPremio"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar"
        android:textColor="#000"
        android:background="#293BA3"
        app:layout_constraintTop_toBottomOf="@+id/etPremio"
        app:layout_constraintLeft_toLeftOf="@+id/etPremio"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        />





</androidx.constraintlayout.widget.ConstraintLayout>