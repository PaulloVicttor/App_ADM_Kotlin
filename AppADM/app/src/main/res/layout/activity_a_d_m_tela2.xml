<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMTela2">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo3"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/logo1"
        android:id="@+id/ivLogo1"

        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Criar torneios"
        android:textColor="#000"
        android:background="#293BA3"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo1"
        app:layout_constraintLeft_toLeftOf="@+id/ivLogo1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/btTorneios"
        android:onClick="irTela3"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Jogadores"
        android:textColor="#000"
        android:background="#293BA3"
        app:layout_constraintTop_toBottomOf="@+id/btTorneios"
        app:layout_constraintLeft_toLeftOf="@+id/btTorneios"
        android:layout_marginTop="30dp"
        android:id="@+id/btJogadores"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Loja"
        android:textColor="#000"
        android:background="#293BA3"
        app:layout_constraintTop_toBottomOf="@+id/btJogadores"
        app:layout_constraintLeft_toLeftOf="@+id/btJogadores"
        android:layout_marginTop="30dp"
        android:id="@+id/btLoja"
        />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Power BI"
        android:textColor="#000"
        android:background="#293BA3"
        app:layout_constraintTop_toBottomOf="@+id/btLoja"
        app:layout_constraintLeft_toLeftOf="@+id/btLoja"
        android:layout_marginTop="30dp"
        android:id="@+id/btBI"
        />



</androidx.constraintlayout.widget.ConstraintLayout>