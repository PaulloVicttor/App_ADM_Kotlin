<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADMTela7">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLogo1"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:src="@drawable/logo1"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promoções"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ivLogo1"
        app:layout_constraintLeft_toLeftOf="@+id/ivLogo1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/tvPromo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camisa Preta"
        android:textColor="#051051"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvPromo"
        app:layout_constraintLeft_toLeftOf="@+id/tvPromo"
        app:layout_constraintRight_toRightOf="@+id/tvPromo"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/tv1Lugar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canoa Marrom"
        android:textColor="#051051"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv1Lugar"
        app:layout_constraintLeft_toLeftOf="@+id/tv1Lugar"
        android:layout_marginTop="60dp"
        android:id="@+id/tv2Lugar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canoa Branca"
        android:textColor="#051051"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv2Lugar"
        app:layout_constraintLeft_toLeftOf="@+id/tv2Lugar"
        android:layout_marginTop="60dp"
        android:id="@+id/tv3Lugar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boné Marrom"
        android:textColor="#051051"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv3Lugar"
        app:layout_constraintLeft_toLeftOf="@+id/tv3Lugar"
        android:layout_marginTop="60dp"
        android:id="@+id/tv4Lugar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>